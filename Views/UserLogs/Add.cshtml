@{
	ViewBag.Title = "add user log";
}
@model Lab10.Models.AddLogViewModel

<h1>Add log</h1>

<form method="post">
	<div class="mt-3">
		<label class="form-label">Log Type:</label>
		<select class="form-select" asp-for="LogType" asp-items="ViewBag.LogTypes"></select>
	</div>

	<div class="mt-3">
		<label class="form-label">Log Severity:</label>
		<select class="form-select" asp-items="ViewBag.LogSeverities" asp-for="LogSeverity"></select>
	</div>

	<div class="mt-3">
		<label class="form-label">Log Date:</label> <br />
		<input asp-for="LogDate" max="@DateTime.Now.ToString("yyyy-MM-ddThh:mm")" min="@DateTime.Now.AddYears(-1).ToString("yyyy-MM-ddThh:mm")" required/>
	</div>

	<div class="mt-3">
		<label class="form-label">Content:</label>
		<input type="text" class="form-control" asp-for="LogContent" required></input>
	</div>

	<div class="mt-3">
		<button type="submit" class="btn btn-primary">Save</button>
	</div>
</form>