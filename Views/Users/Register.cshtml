@{
}

@model Lab10.Models.UserRegisterViewModel

<h1>Login</h1>
<form method="post">
	<div class="mt-3">
		<label class="form-label">Username</label>
		<input type="text" class="form-control" asp-for="Name" required />
	</div>

	<div class="mt-3">
		<label class="form-label">Email</label>
		<input type="email" class="form-control" asp-for="Email" required />
	</div>

	<div class="mt-3">
		<label class="form-label">Password</label>
		<input type="password" class="form-control" asp-for="Password" required />
	</div>

	<div class="mt-3">
		<label class="form-label">Confirm Password</label>
		<input type="password" class="form-control" asp-for="ConfirmPassword" required />
	</div>

	<div class="mt-3">
		<button type="submit" class="btn btn-primary ms-3" asp-action="Register" asp-controller="Users">Register</button>
	</div>
</form>
